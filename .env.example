# LiquidityLink Environment Configuration

# Base Network Configuration
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_CHAIN_ID=8453

# API Endpoints
NEXT_PUBLIC_UNISWAP_V3_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3-base
NEXT_PUBLIC_AERODROME_API_URL=https://api.aerodrome.finance
NEXT_PUBLIC_BASESWAP_API_URL=https://api.baseswap.fi

# Farcaster Integration
NEXT_PUBLIC_FARCASTER_HUB_URL=https://hub.farcaster.xyz
FARCASTER_SIGNER_PRIVATE_KEY=your_farcaster_signer_private_key_here
FARCASTER_FID=your_farcaster_fid_here

# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here
NEXT_PUBLIC_CDP_PROJECT_ID=your_coinbase_developer_platform_project_id

# Database Configuration (if using external DB)
DATABASE_URL=postgresql://username:password@localhost:5432/liquiditylink
REDIS_URL=redis://localhost:6379

# Authentication & Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# External Services
COINGECKO_API_KEY=your_coingecko_api_key_here
DEFILLAMA_API_KEY=your_defillama_api_key_here

# Notification Services
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@liquiditylink.app
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Feature Flags
NEXT_PUBLIC_ENABLE_REBALANCING=true
NEXT_PUBLIC_ENABLE_FARCASTER_FRAMES=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEBUG_MODE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Gas Optimization
NEXT_PUBLIC_DEFAULT_GAS_LIMIT=500000
NEXT_PUBLIC_GAS_PRICE_MULTIPLIER=1.1

# Risk Assessment
RISK_ASSESSMENT_UPDATE_INTERVAL=3600
MAX_POSITION_CONCENTRATION=0.3
DEFAULT_SLIPPAGE_TOLERANCE=0.005

# Rebalancing Configuration
REBALANCING_CHECK_INTERVAL=1800
MIN_REBALANCE_AMOUNT=100
MAX_REBALANCE_GAS_PRICE=50

# Backup & Recovery
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_STORAGE_PROVIDER=aws_s3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=liquiditylink-backups
